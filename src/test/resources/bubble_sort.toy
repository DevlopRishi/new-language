fun bubble_sort [ arr, n ]
    loop i = 0 to i < n - 1 step i = i + 1
        loop j = 0 to j < n - i - 1 step j = j + 1
            if arr{j+1} < arr{j} then
                temp = arr{j}
                arr{j} = arr{j + 1}
                arr{j + 1} = temp
            end
       end
    end
end

fun is_sorted [ arr, n ]
    loop i = 0 to i < n - 1 step i = i + 1
        if arr{i} > arr{i+1} then
            return false
        end
    end
    return true
end

arr = {}
arr_len = 20
loop i = 0 to i < arr_len step i = i + 1
    arr << i * 117 % 17 - 1
end

print arr
print is_sorted [ arr, arr_len ]

bubble_sort [ arr, arr_len ]
print arr
print is_sorted [ arr, arr_len ]